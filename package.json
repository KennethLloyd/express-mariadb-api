{
  "name": "express-mariadb-api",
  "version": "1.1.0",
  "type": "module",
  "description": "Simple NodeJS Express Boilerplate with Sequelize as ORM",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node -r dotenv/config src/index.js",
    "dev": "nodemon -r dotenv/config src/index.js",
    "docs": "./node_modules/.bin/apidoc -i src/controllers -o docs",
    "lint": "eslint src/**",
    "lint-fix": "eslint src/** --fix",
    "version": "auto-changelog --template changelog-template.hbs -p && git add CHANGELOG.md"
  },
  "auto-changelog": {
    "commitLimit": false,
    "unreleased": true,
    "replaceText": {
      "[Cc]hanges": "",
      "[Ff]ix": "",
      "[Bb]reak": "",
      "[Aa]dd": ""
    },
    "includeBranch": [
      "master"
    ]
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "apidoc": {
    "title": "API Documentation"
  },
  "keywords": [
    "api",
    "boilerplate",
    "express",
    "jwt",
    "mariadb",
    "node",
    "restful",
    "simple",
    "sequelize"
  ],
  "author": "Kenneth Lloyd Verastigue",
  "license": "ISC",
  "dependencies": {
    "apidoc": "^0.26.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "mariadb": "^2.5.3",
    "sequelize": "^6.5.0"
  },
  "devDependencies": {
    "auto-changelog": "^2.2.1",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  }
}
